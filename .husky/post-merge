echo "ğŸ”„ Checking for dependency updates after merge..."

# Kiá»ƒm tra náº¿u package.json hoáº·c package-lock.json thay Ä‘á»•i
if git diff --name-only HEAD@{1} HEAD | grep -E 'package(-lock)?\.json$'; then
  echo "ğŸ“¦ Dependencies changed! Running npm install..."
  npm install
fi

